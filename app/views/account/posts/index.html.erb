<div class="col-md-12">

  <h2 class="text-center"> 我發表過的文章 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      
        <tr>
          <td> <%= render_post_content(post) %> </td> 
          <td> <%= link_to(truncate(post.group.title,length: 10), group_path(post.group, post)) %></td>
          <td> <%= post.updated_at.to_s(:db) %> </td> 
          <td><%= link_to("編輯", edit_group_post_path(post.group, post), class: "btn btn-info btn-xs") %></td>
     <td><%= link_to("刪除", group_post_path(post.group, post), class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "確定刪除這篇文章嗎？"}) %></td>

        </tr>
        
      <% end %>
    </tbody>
  </table>
</div>