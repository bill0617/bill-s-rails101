<div class="col-md-12">
  <div class="group">
 <%= link_to("建立新討論版", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <h2 class="text-center">我的討論版</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Posr Count</td>
        <td>Last Update</td>
      </tr>
    </thead>
  
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(truncate(group.title, length: 10), group_path(group)) %> </td> 
          <td> <%= group.description %> </td> 
          <td> <%= group.posts_count %> </td> 
          <td> <%= group.updated_at.to_s(:db) %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>